{
    "name": "client",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "check-types": "tsc --noemit",
        "dev": "vite",
        "build": "tsc && vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 && pnpm check-types",
        "lint-staged:client": "lint-staged && pnpm lint",
        "preview": "vite preview"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-postcss-modules": "^2.0.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "lint-staged": "^15.2.0",
        "prettier": "^3.1.1",
        "stylelint": "^16.1.0",
        "stylelint-color-format": "^1.1.0",
        "stylelint-config-idiomatic-order": "^10.0.0",
        "stylelint-config-standard": "^36.0.0",
        "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
        "tslib": "^2.6.2",
        "typescript": "^5.2.2",
        "vite": "^5.0.8"
    },
    "lint-staged": {
        "*.{tsx,ts}": "eslint --cache --fix",
        "*.{ts,tsx,js,css,md,html,json}": "prettier --write",
        "*.css": [
            "stylelint --config .stylelintrc-autofix.json --fix",
            "stylelint --config .stylelintrc.json"
        ]
    }
}
